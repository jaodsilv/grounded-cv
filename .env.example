# GroundedCV Environment Configuration
# Copy this file to .env and fill in your values

# Claude Agent SDK Authentication
# The application uses Claude CLI for authentication. Set up via:
#   claude login              (for direct API access)
#   export ANTHROPIC_API_KEY  (for programmatic access)
# See: https://docs.anthropic.com/en/docs/claude-code/cli-usage

# Data directory path (optional, defaults to ./data)
DATA_DIR=./data

# Debug mode (optional, defaults to false)
DEBUG=false

# Backend settings
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Frontend settings (for development)
VITE_API_URL=http://localhost:8000
